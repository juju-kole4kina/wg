header.header
    .header__container(class="container container_1440")
        nav.header__menu(class="header-menu")
            ul.header-menu__menu-list
                each item in menuContent
                    +menuItem(item.liClass, item.linkClass, item.link, item.content)
                +listItemWithPic('header-menu__item logo', 'header-menu__link', '#', 'logo__logo-image', "./images/icons/logo.svg", "Логотип 'Wood Games. Игры из дерева. Калининград'")

        +burger-btn("header__burger-btn closed")
        .header__phone-link-container
            i._icon-phone
            a.header__phone-link(class="hover-light-text" href='tel:+7962398174') +7 (906) 239-81-74